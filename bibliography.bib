@article{Dumbovic2018-ForbMod,
	doi = {10.3847/1538-4357/aac2de},
	url = {10.3847%2F1538-4357%2Faac2de},
	year = 2018,
	month = {jun},
	publisher = {American Astronomical Society},
	volume = {860},
	number = {1},
	pages = {71},
	author = {Mateja Dumbovi{\'{c}} and Bernd Heber and Bojan Vr{\v{s}}nak and Manuela Temmer and Anamarija Kirin},
	title = {An Analytical Diffusion{\textendash}Expansion Model for Forbush Decreases Caused by Flux Ropes},
	journal = {The Astrophysical Journal},
	abstract = {We present an analytical diffusion–expansion Forbush decrease (FD) model ForbMod, which is based on the 
	widely used approach of an initially empty, closed magnetic structure (i.e., flux rope) that fills up slowly with 
	particles by perpendicular diffusion. The model is restricted to explaining only the depression caused by the 
	magnetic structure of the interplanetary coronal mass ejection (ICME). We use remote CME observations and a 3D 
	reconstruction method (the graduated cylindrical shell method) to constrain initial boundary conditions of the FD 
	model and take into account CME evolutionary properties by incorporating flux rope expansion. Several flux rope 
	expansion modes are considered, which can lead to different FD characteristics. In general, the model is 
	qualitatively in agreement with observations, whereas quantitative agreement depends on the diffusion coefficient 
	and the expansion properties (interplay of the diffusion and expansion). A case study was performed to explain the 
	FD observed on 2014 May 30. The observed FD was fitted quite well by ForbMod for all expansion modes using only the 
	diffusion coefficient as a free parameter, where the diffusion parameter was found to correspond to an expected 
	range of values. Our study shows that, in general, the model is able to explain the global properties of an FD 
	caused by a flux rope and can thus be used to help understand the underlying physics in case studies.}
}

@article{Belov-2005-GSM,
	author = {Belov, A. V. and Baisultanova, L. and Eroshenko, E. and Mavromichalaki, H. and Yanke, V. and Pchelkin, V. 
	and Plainaki, C. and Mariatos, G.},
